<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="about_us" name="About Us">
        <t t-call="website.layout">
            <div id="wrap" class="oe_structure oe_empty text-muted">
                <!-- About us Button snippet -->
                <section class="s_cover pt96 pb96 o_colored_level s_parallax_no_overflow_hidden oe_img_bg o_bg_img_center d-flex flex-column justify-content-center" style="background-image: url(/web/image/website_quickship.qs_aboutus_bg_cover), url(/web/image/website_quickship.qs_aboutus_bg_1); height:55vh;">
                    <div class="o_we_bg_filter bg-primary-50"/>
                    <div class="container s_allow_columns text-center pt96">
                        <button type="button" class="btn btn-outline-light border border-light border-3 rounded-pill">
                            <span class="display-6 px-5 fw-bolder"> ABOUT US </span>
                        </button>
                    </div>
                </section>
                <!-- "QuickShip: Fast, Safe, Nationwide" -->
                <section class="s_text_image pt32 pb32 o_colored_level container" style="background-image: none;">
                    <section class="s_title pt24 pb24">
                        <div class="text-center container">
                            <span class="fs-2 fw-bold">"QuickShip:</span> <span class="fs-3 fst-italic"> Fast, Safe, Nationwide" </span> 
                        </div>
                    </section>
                    <section class="row align-items-center m-auto container">
                        <div class="col-lg-6 o_colored_level">
                            <section class="pt24 pb24 o_colored_level">
                                <div class="container">
                                    <div class="d-flex">
                                        <div>
                                            <img alt="" src="/web/image/website_quickship.qs_aboutus_q_letter" class="h-100 w-100 img-fluid mx-auto o_editable_media" loading="lazy"/>
                                        </div>
                                        <div class="ms-2 my-auto">
                                            <p class="m-auto fs-6">We are QuickShip, and we do what we promise. We deliver your vehicle quickly, safely, and to any corner of the nation. When you choose QuickShip Cars, you choose peace of mind.</p>
                                        </div>
                                    </div>
                                </div>
                            </section>
                            <p class="o_default_snippet_text fs-6">QuickShip Cars ensures your vehicle arrives safely and swiftly anywhere in the USA. Experience hassle-free auto shipping with us.</p>
                            <p class="o_default_snippet_text fs-6">Trust QuickShip Cars to deliver your vehicle with care, precision, and professionalism. We're not just moving cars; we're moving expectations. Get started with us today and experience the difference that "QuickShip: Fast, Safe, Nationwide" makes in auto shipping.</p>
                        </div>
                        <div class="col-lg-6 pt16 pb16 o_colored_level">
                            <img src="/web/image/website.s_text_image_default_image" class="img img-fluid mx-auto" alt="" loading="lazy"/>
                        </div>
                    </section>
                </section>
                <!-- Our Mission -->
                <section class="s_references pt48 pb32 o_colored_level">
                    <section>
                        <h2 class="fst-italic pb24 text-center">Our Mission!</h2>
                        <div class="container text-center fs-5">
                            <div>
                                <span>At QuickShip Cars, our mission is to provide the most reliable, efficient, and customer-centric<br/> auto shipping services in the USA.</span>
                            </div>
                            <div>
                                <span>We are committed to simplifying the vehicle transportation process for our clients, ensuring their cars arrive<br/> safely and swiftly at their chosen destinations.&amp;nbsp;</span>
                            </div>
                            <div>
                                <span>We aim to be the trusted partner for individuals and businesses, delivering peace of mind with every shipment.</span><br/>
                            </div>
                        </div>
                    </section>
                    <section class="container">
                        <div class="row equal-height-row ">
                            <div class="col-1 pt16 pb16 px-0 o_colored_level"/>
                            <div class="col-lg-2 pt16 pb16 px-0 o_colored_level" >
                                <img src="/web/image/website_quickship.qs_aboutus_mission_img_1" class="img mx-auto p-3" width="128" height="128" style="object-fit: contain;" alt="" loading="lazy"/>
                                <h5 class="text-center text-muted">Enclosed</h5>
                            </div>
                            <div class="col-lg-2 pt16 pb16 px-0 o_colored_level" >
                                <img src="/web/image/website_quickship.qs_aboutus_mission_img_2" class="img mx-auto p-3" style="object-fit: contain;" width="128" height="128" alt="" loading="lazy"/>
                                <h5 class="text-center text-muted">Door to Door</h5>
                            </div>
                            <div class="col-lg-2 pt16 pb16 px-0 o_colored_level">
                                <img src="/web/image/website_quickship.qs_aboutus_mission_img_3" class="img mx-auto p-3" style="object-fit: contain;" width="128" height="128" alt="" loading="lazy"/>
                                <h5 class="text-center text-muted">Nationwide auto shipping</h5>
                            </div>
                            <div class="col-lg-2 pt16 pb16 px-0 o_colored_level">
                                <img src="/web/image/website_quickship.qs_aboutus_mission_img_4" class="img mx-auto p-3" width="128" height="128" style="object-fit: contain;" alt="" loading="lazy"/>
                                <h5 class="text-center text-muted">Open</h5>
                            </div>
                            <div class="col-lg-2 pt16 pb16 px-0 o_colored_level">
                                <img src="/web/image/website_quickship.qs_aboutus_mission_img_5" class="img mx-auto p-3" width="128" height="128" style="object-fit: contain;" alt="" loading="lazy"/>
                                <h5 class="text-center text-muted">Expedited auto shipping</h5>
                            </div>
                            <div class="col-1 pt16 pb16 o_colored_level"/>
                        </div>
                    </section>
                </section>
                <!-- Our Values -->
                <section class="container">
                    <h2 class="fst-italic pb24 text-center">Our Values!</h2>
                    <section class="text-center">
                        <h5 class="fst-italic fw-bold my-3">Reliability</h5>
                        <p class="fs-5">
                            We pride ourselves on being a dependable partner. Our clients can trust us to transport their vehicles with care,
                            professionalism, and punctuality.
                        </p>
                    </section>
                    <section class="text-center">
                        <h5 class="fst-italic fw-bold my-3">Efficiency</h5>
                        <p class="fs-5">
                            QuickShip Cars is dedicated to streamlining the auto-shipping experience. We continuously seek innovative ways to make the process smoother and faster for our customers.
                        </p>
                    </section>
                    <section class="text-center">
                        <h5 class="fst-italic fw-bold my-3">Customer-Centric</h5>
                        <p class="fs-5">
                            Our customers are at the heart of everything we do. We are committed to delivering exceptional service and ensuring our clients' needs are met with utmost satisfaction
                        </p>
                    </section>
                    <section class="text-center">
                        <h5 class="fst-italic fw-bold my-3">Safety</h5>
                        <p class="fs-5">
                            The safety of our clients' vehicles is paramount. We adhere to the highest safety standards and employ experienced professionals to ensure the secure transport of every car.
                        </p>
                    </section>
                    <section class="text-center">
                        <h5 class="fst-italic fw-bold my-3">Nationwide Coverage</h5>
                        <p class="fs-5">
                            We are proud to offer nationwide coverage, ensuring we can serve our customers from coast to coast, no matter where their vehicles need to go.
                        </p>
                    </section>
                </section>
                <!-- Our Statement -->
                <section class="pb64 pt64">
                    <h2 class="fst-italic pb24 text-center">Our Statement!</h2>
                    <div class="container text-center">
                        <div>
                            <span class="fs-5">QuickShip Cars is more than just an auto shipping company; we are your <br/> trusted partner in vehicle transportation.</span>
                        </div>
                        <div>
                            <span class="fs-5">Our mission is to simplify the process of moving your car, making it fast, safe, and stress-free.</span>
                        </div>
                        <div>
                            <span class="fs-5">We do this by upholding our core values of reliability,<br/>efficiency, and customer-centricity</span>
                        </div>
                    </div>
                </section>
                <!-- Join the carrier -->
                <section class="s_cover parallax s_parallax_is_fixed bg-black-50 o_colored_level pb32 pt32" style="background-image: url(/web/image/website_quickship.qs_aboutus_bg_2); background-size:cover;">
                    <div class="container s_allow_columns o_container_small">
                        <h1 class="display-5 pb12" style="text-align: center; font-weight: bold;">Join Our Carrier Network</h1>
                        <p class="lead container text-center">Expand your horizons and elevate your business by joining Quickship's Carrier Network.Partner with us to access a world of opportunities, competitive rates, and seamless collaborations. Together, let's drive success in auto shipping and deliver excellence to our clients.</p>
                        <p style="text-align: center;">
                            <a class="btn aqua-gradient color-block o_default_snippet_text rounded-pill" style="background-image: linear-gradient(135deg, rgb(240, 245, 254) 0%, rgb(0, 179, 204) 100%);" href="/">Become a Partner</a>
                        </p>
                    </div>
                </section>
            </div>
        </t>
    </template>
    <record id="aboutus" model="website.page">
        <field name="name">About Us</field>
        <field name="is_published" eval="True"/>
        <field name="url">/about-us</field>
        <field name="header_overlay" eval="True"/>
        <field name="view_id" ref="about_us"/>
        <field name="track" eval="True"/>
    </record>
</odoo>
